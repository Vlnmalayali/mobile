#define LED_PIN 13   // Built-in LED

void setup() {
  Serial.begin(9600);
  pinMode(LED_PIN, OUTPUT);
  Serial.println("ğŸ’¡ Smart Light System Started...");
  Serial.println("Type 'ON' or 'OFF' in Serial Monitor to control LED");
}

void loop() {
  if (Serial.available()) {
    String command = Serial.readStringUntil('\n');
    command.trim(); // Remove whitespace

    if (command == "ON") {
      digitalWrite(LED_PIN, HIGH);
      Serial.println("ğŸ’¡ LED turned ON (via web interface)");
    } else if (command == "OFF") {
      digitalWrite(LED_PIN, LOW);
      Serial.println("ğŸ’¡ LED turned OFF (via web interface)");
    } else {
      Serial.println("â“ Unknown command. Type ON or OFF.");
    }
  }
}
